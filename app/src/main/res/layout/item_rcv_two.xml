<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title_item_menu"
        android:layout_marginLeft="45dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:background="@drawable/bg_textview_news"
        android:fontFamily="@font/raleway_medium"
        android:textSize="16sp"
        android:textColor="#151515"
        android:text="Tools"
        android:layout_marginVertical="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:src="@drawable/icons_8_profit_2"
        android:id="@+id/img_item_menu_two_1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/tv_title_item_menu"
        app:layout_constraintTop_toBottomOf="@id/tv_title_item_menu"
        android:layout_width="16dp"
        android:layout_height="15dp"></ImageView>
    <ImageView
        android:src="@drawable/icons_8_profit_2"
        android:id="@+id/img_item_menu_two_2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/tv_title_item_menu"
        app:layout_constraintTop_toBottomOf="@id/img_item_menu_two_1"
        android:layout_width="16dp"
        android:layout_height="16dp"></ImageView>
    <ImageView
        android:src="@drawable/icons_8_profit_2"
        android:id="@+id/img_item_menu_two_3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/tv_title_item_menu"
        app:layout_constraintTop_toBottomOf="@id/img_item_menu_two_2"
        android:layout_width="14dp"
        android:layout_height="13dp"></ImageView>
    <ImageView
        android:src="@drawable/icons_8_profit_2"
        android:id="@+id/img_item_menu_two_4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/tv_title_item_menu"
        app:layout_constraintTop_toBottomOf="@id/img_item_menu_two_3"
        android:layout_width="16dp"
        android:layout_height="16dp"></ImageView>
    <TextView
        android:id="@+id/tv_item_menu_two_1"
        android:fontFamily="@font/raleway_medium"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="Select Stocks"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toEndOf="@id/img_item_menu_two_1"
        app:layout_constraintTop_toBottomOf="@id/tv_title_item_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tv_item_menu_two_2"
        android:fontFamily="@font/raleway_medium"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="Select Stocks"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toEndOf="@id/img_item_menu_two_1"
        app:layout_constraintTop_toBottomOf="@id/tv_item_menu_two_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tv_item_menu_two_3"
        android:fontFamily="@font/raleway_medium"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="Select Stocks"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toEndOf="@id/img_item_menu_two_1"
        app:layout_constraintTop_toBottomOf="@id/tv_item_menu_two_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tv_item_menu_two_4"
        android:fontFamily="@font/raleway_medium"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="Select Stocks"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toEndOf="@id/img_item_menu_two_1"
        app:layout_constraintTop_toBottomOf="@id/tv_item_menu_two_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>