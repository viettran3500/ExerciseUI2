<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgTracciato869"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_tracciato_869"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ImageView>
    <ImageView
        android:layout_marginRight="45dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/icons_8_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <ImageView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <ScrollView
        android:paddingVertical="28dp"
        android:id="@+id/menu"
        android:background="#f8f8f8"
        android:layout_marginTop="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="15dp"
                android:paddingHorizontal="12sp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_button_loadmore"
                android:fontFamily="@font/lato_blackitalic"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:text="INDEX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginHorizontal="28dp"
                android:fontFamily="@font/lato_blackitalic"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#222222"
                android:text="SHARES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:fontFamily="@font/lato_blackitalic"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#222222"
                android:text="CURRENCIES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginHorizontal="28dp"
                android:fontFamily="@font/lato_blackitalic"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#222222"
                android:text="FUTURES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:fontFamily="@font/lato_blackitalic"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#222222"
                android:text="CRYPTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </ScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:background="#ffffff"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:id="@+id/recyclerViewShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/btnLoadmore"
        android:paddingVertical="8dp"
        android:paddingHorizontal="21dp"
        android:background="@drawable/bg_button_loadmore"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewShow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/raleway_medium"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="Load More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>


    <ImageView
        android:padding="13dp"
        android:background="@drawable/bg_fab"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/icons_8_alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>