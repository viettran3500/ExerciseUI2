<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgTracciato869"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tracciato_869"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginRight="45dp"
            android:src="@drawable/icons_8_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <HorizontalScrollView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:background="@drawable/bg_layout_menu"
            android:paddingVertical="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_button_loadmore"
                    android:fontFamily="@font/lato_blackitalic"
                    android:paddingHorizontal="12sp"
                    android:paddingVertical="6dp"
                    android:text="INDEX"
                    android:textColor="#ffffff"
                    android:textSize="12sp"></TextView>

                <TextView
                    android:id="@+id/tvShares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    android:fontFamily="@font/lato_blackitalic"
                    android:paddingHorizontal="12sp"
                    android:paddingVertical="6dp"
                    android:text="SHARES"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/tvCurrencise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_blackitalic"
                    android:paddingHorizontal="12sp"
                    android:paddingVertical="6dp"
                    android:text="CURRENCIES"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/tvFutures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    android:fontFamily="@font/lato_blackitalic"
                    android:paddingHorizontal="12sp"
                    android:paddingVertical="6dp"
                    android:text="FUTURES"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/tvCrypto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/lato_blackitalic"
                    android:paddingHorizontal="12sp"
                    android:paddingVertical="6dp"
                    android:text="CRYPTO"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="normal"></TextView>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="100dp"
            android:background="#ffffff"
            android:paddingBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/btnLoadmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_button_loadmore"
            android:fontFamily="@font/raleway_medium"
            android:paddingHorizontal="21dp"
            android:paddingVertical="8dp"
            android:text="Load More"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewShow"></TextView>


        <ImageView
            android:id="@+id/imgnotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_fab"
            android:padding="13dp"
            android:src="@drawable/icons_8_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>